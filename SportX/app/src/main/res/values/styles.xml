<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="main_tab_bottom_rl">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="main_tab_bottom_tv">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#888</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_height</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="main_padding">
        <item name="android:paddingLeft">@dimen/padding_lr</item>
        <item name="android:paddingRight">@dimen/padding_lr</item>
        <item name="android:paddingTop">@dimen/padding_tb</item>
        <item name="android:paddingBottom">@dimen/padding_tb</item>
    </style>

    <!-- 每一个分块的标签 -->
    <style name="text_part_title">
        <item name="android:color">@color/text_lighter</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="text_user_name_in_discover">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="text_user_name_in_follow">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/text_small_14</item>
    </style>

    <style name="text_content">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="text_timeplace_in_discover">
        <item name="android:textColor">@color/text_lightest</item>
        <item name="android:textSize">@dimen/text_smallest</item>
    </style>

    <style name="text_gym_name_in_discover">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_smallest</item>
    </style>

    <style name="text_gym_place_in_discover">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_smallest</item>
    </style>

    <style name="text_gym_intro_title">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="text_gym_intro_content">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:minHeight">@dimen/gym_intro_icon_size</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:layout_marginTop">3dp</item>-->
    </style>

    <style name="prefer_user_avatar">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

    <style name="prefer_user_name">
        <item name="android:color">@color/lightLightGray</item>
        <item name="android:textSize">@dimen/text_smallest</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="text_user_name_in_gym" parent="prefer_user_name">
    </style>

    <style name="follow_image">
        <item name="android:layout_height">@dimen/follow_image_size</item>
        <item name="android:layout_width">@dimen/follow_image_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    
    <style name="gym_intro_panel" parent="main_padding">
        <item name="android:background">@drawable/gym_intro_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="button_buy">
        <item name="android:background">@drawable/selector_buy</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="text_user_in_card_info">
        <item name="android:layout_width">@dimen/text_user_info_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_user_in_card_count" parent="text_user_in_card_info">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="text_option">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_big</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="user_rl_style">
        <item name="android:padding">12dp</item>
    </style>

    <style name="line_gym_intro">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <!--<item name="android:layout_marginTop">2dp</item>-->
        <!--<item name="android:layout_marginBottom">2dp</item>-->
        <item name="android:background">@color/lightgray</item>
    </style>
    <style name="gym_intro_image">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_my_detail_left">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="text_my_detail_right">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="rl_my_item" parent="main_padding">
        <item name="android:minHeight">50dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="rl_money_item">
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_white_to_gray</item>
    </style>

    <style name="image_money_item">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="text_money_item">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

</resources>
