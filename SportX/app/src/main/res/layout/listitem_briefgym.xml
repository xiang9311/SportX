<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white_to_gray"
        android:clickable="true"
        style="@style/main_padding">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/image"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_gym_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_gym_intro_title"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginLeft="5dp"
            android:text="北京海淀健身房"/>

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_gym_name"
            android:layout_below="@+id/tv_gym_name"
            android:layout_marginTop="3dp"
            style="@style/text_timeplace_in_discover"
            android:text="北京市海淀路5号院"/>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/text_timeplace_in_discover"
            android:text="3km"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightLightGray"/>

</LinearLayout>