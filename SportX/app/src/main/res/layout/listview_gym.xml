<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/selector_white_to_gray">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/main_padding">

        <TextView
            android:id="@+id/tv_gym_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_normal"
            android:text="欧意健身房"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gym_image0"
                android:layout_width="0dp"
                android:layout_height="@dimen/gym_image_height"
                android:layout_weight="1"
                android:src="@mipmap/image"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/iv_gym_image1"
                android:layout_width="0dp"
                android:layout_height="@dimen/gym_image_height"
                android:layout_weight="1"
                android:src="@mipmap/image"
                android:layout_marginLeft="3dp"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/iv_gym_image2"
                android:layout_width="0dp"
                android:layout_height="@dimen/gym_image_height"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:src="@mipmap/image"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <com.wefika.flowlayout.FlowLayout
            android:id="@+id/flowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

        </com.wefika.flowlayout.FlowLayout>

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_small"
            android:text="这里是该健身房的地址"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightLightGray"/>

</LinearLayout>