<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="71dp">  <!--这个长度根据图片高度和上下边距计算出来-->

    <RelativeLayout
        android:id="@+id/rl_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/selector_white_to_gray"
        style="@style/main_padding">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@mipmap/image"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_normal"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="****在“按时到岗订时到岗订时到岗订时到岗订单...”中回复了你，点击查看"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_smaller"
            android:text="3小时前"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightLightGray"/>

</FrameLayout>